---
import { ThemeToggle } from "./ui/theme-toggle";
---

<header class="fixed top-0 left-0 right-0 z-50 px-4 py-3">
  <nav class="max-w-5xl mx-auto backdrop-blur-md bg-white/10 dark:bg-black/20 rounded-full border border-white/20 dark:border-white/10 px-6 py-3 flex items-center justify-between">
    <a
      href="/"
      class="text-lg font-bold text-primary hover:text-primary/80 transition-colors"
    >
      DM
    </a>
    <div class="flex items-center gap-6">
      <a
        href="/"
        class="text-sm text-foreground/70 hover:text-primary transition-colors"
      >
        Home
      </a>
      <a
        href="/blog"
        class="text-sm text-foreground/70 hover:text-primary transition-colors"
      >
        Blog
      </a>
      <ThemeToggle client:only="react" />
    </div>
  </nav>
</header>
