---
interface Props {
  content: string;
}

const { content } = Astro.props;

// Parse the content to extract title/dates and description
const lines = content.split("  ").filter(l => l.trim());
const titleMatch = content.match(/\*\*([^*]+)\*\* \| (.+?) (\d{4})/);
---

<section class="mb-12">
  <h2 class="text-2xl font-bold text-gray-900 mb-6 border-b-4 border-accent-500 pb-2 inline-block">
    Previous Experience
  </h2>
  <div class="bg-gray-50 rounded-lg p-6">
    <p class="text-gray-700 leading-relaxed">
      {content.replace(/\*\*/g, '')}
    </p>
  </div>
</section>
