---
import type { CommunityEntry } from "../lib/parseResume";

interface Props {
  community: CommunityEntry[];
}

const { community } = Astro.props;
---

<section class="mb-12">
  <h2 class="text-2xl font-bold text-gray-900 mb-6 border-b-4 border-accent-500 pb-2 inline-block">
    Community
  </h2>
  <div class="space-y-4">
    {community.map((entry) => (
      <div class="bg-white rounded-lg border border-gray-200 p-4 shadow-sm">
        <h3 class="font-bold text-accent-700">{entry.org}</h3>
        <p class="text-gray-700">{entry.description}</p>
      </div>
    ))}
  </div>
</section>
