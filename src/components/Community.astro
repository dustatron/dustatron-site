---
import type { CommunityEntry } from "../lib/parseResume";

interface Props {
  community: CommunityEntry[];
}

const { community } = Astro.props;
---

<section class="mb-12">
  <h2 class="text-2xl font-bold text-gray-900 dark:text-gray-100 mb-6 border-b-4 border-accent-500 pb-2 inline-block">
    Community
  </h2>
  <div class="space-y-4">
    {community.map((entry) => (
      <div class="bg-white dark:bg-gray-700 rounded-lg border border-gray-200 dark:border-gray-600 p-4 shadow-sm">
        <h3 class="font-bold text-accent-700 dark:text-accent-400">{entry.org}</h3>
        <p class="text-gray-700 dark:text-gray-300">{entry.description}</p>
      </div>
    ))}
  </div>
</section>
