---
import type { Header } from "../lib/parseResume";

interface Props {
  header: Header;
}

const { header } = Astro.props;
---

<header class="mb-12">
  <h1 class="text-5xl font-bold text-gray-900 dark:text-gray-100 mb-2">{header.name}</h1>
  <p class="text-2xl text-accent-600 dark:text-accent-400 font-medium mb-4">
    {header.title} <span class="text-gray-400 dark:text-gray-500">|</span> {header.location}
  </p>
  <div class="flex flex-wrap gap-4 text-gray-600 dark:text-gray-400">
    {header.links.map((link, i) => (
      <>
        <a
          href={link.url}
          target="_blank"
          rel="noopener noreferrer"
          class="hover:text-accent-600 dark:hover:text-accent-400 transition-colors underline underline-offset-2"
        >
          {link.text}
        </a>
        {i < header.links.length - 1 && <span class="text-gray-300 dark:text-gray-600">|</span>}
      </>
    ))}
  </div>
</header>
