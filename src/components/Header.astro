---
import type { Header } from "../lib/parseResume";

interface Props {
  header: Header;
}

const { header } = Astro.props;
---

<header class="mb-12">
  <h1 class="text-5xl font-bold text-gray-900 mb-2">{header.name}</h1>
  <p class="text-2xl text-accent-600 font-medium mb-4">
    {header.title} <span class="text-gray-400">|</span> {header.location}
  </p>
  <div class="flex flex-wrap gap-4 text-gray-600">
    <a href={`mailto:${header.email}`} class="hover:text-accent-600 transition-colors">
      {header.email}
    </a>
    <span class="text-gray-300">|</span>
    <span>{header.phone}</span>
    <span class="text-gray-300">|</span>
    {header.links.map((link, i) => (
      <>
        <a
          href={link.url}
          target="_blank"
          rel="noopener noreferrer"
          class="hover:text-accent-600 transition-colors underline underline-offset-2"
        >
          {link.text}
        </a>
        {i < header.links.length - 1 && <span class="text-gray-300">|</span>}
      </>
    ))}
  </div>
</header>
