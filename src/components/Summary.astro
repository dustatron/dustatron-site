---
interface Props {
  summary: string;
}

const { summary } = Astro.props;
---

<section class="mb-12">
  <h2 class="text-2xl font-bold text-gray-900 mb-4 border-b-4 border-accent-500 pb-2 inline-block">
    Summary
  </h2>
  <p class="text-gray-700 text-lg leading-relaxed">
    {summary}
  </p>
</section>
