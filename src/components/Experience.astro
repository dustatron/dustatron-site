---
import type { Job } from "../lib/parseResume";

interface Props {
  experience: Job[];
}

const { experience } = Astro.props;
---

<section class="mb-12">
  <h2 class="text-2xl font-bold text-gray-900 mb-6 border-b-4 border-accent-500 pb-2 inline-block">
    Experience
  </h2>
  <div class="space-y-8">
    {experience.map((job) => (
      <article class="bg-white rounded-lg border border-gray-200 p-6 shadow-sm hover:shadow-md transition-shadow">
        <div class="flex flex-col sm:flex-row sm:justify-between sm:items-start mb-3">
          <div>
            <h3 class="text-xl font-bold text-gray-900">{job.title}</h3>
            <p class="text-accent-600 font-medium">{job.company}</p>
          </div>
          <div class="text-gray-500 text-sm mt-1 sm:mt-0 sm:text-right">
            <p>{job.dates}</p>
            <p>{job.location}</p>
          </div>
        </div>
        <ul class="list-disc list-outside ml-5 space-y-2 text-gray-700">
          {job.bullets.map((bullet) => (
            <li>{bullet}</li>
          ))}
        </ul>
      </article>
    ))}
  </div>
</section>
